{
  "name": "Pintura",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "generateIndex": "node generateIndex.js > index.html",
    "generateIndexDebug": "node generateIndex.js debug > index.html",
    "generateClassStructure": "mkdir -p generated && node xslt_templates/generateClassStructure.js",
    "generateHandlebars": "node xslt_templates/generateHandlebarTemplates.js --xmlDir=./data_model",
    "handlebarAttributes": "handlebars generated > generated/template.js",
    "handlebarStatic": "handlebars hbrs_templates >> generated/template.js",
    "handlebarTemplates": "npm run handlebarAttributes && npm run handlebarStatic",
    "doWebpack": "webpack --config webpack.config.js",
    "doWebpackDev": "webpack --config webpack.config.dev.js",
    "templates": "npm run generateClassStructure && npm run generateHandlebars && npm run handlebarTemplates",
    "build": "npm run generateIndex && npm run templates && npm run doWebpack && npm run test",
    "build-dev": "npm run generateIndexDebug && npm run templates && npm run doWebpackDev && npm run test",
    "initializeTests": "node node_modules/jasmine/bin/jasmine init",
    "test": "node test/runTests.js"
  },
  "devDependencies": {
    "handlebars": "^4.0.11",
    "jasmine": "^3.2.0",
    "jasmine-console-reporter": "^3.1.0",
    "jsdom": "^12.0.0",
    "libxmljs": "^0.18.7",
    "libxslt": "^0.7.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^2.0.10",
    "xmldom": "^0.1.27"
  }
}
