{
  "name": "Pintura",
  "version": "0.1.0",
  "main": "main.js",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://git.rwth-aachen.de/acs/core/cim/pintura.git"
  },
  "mode": "production",
  "scripts": {
    "makeDirs": "mkdir -p cimmenu/lib && mkdir -p cimsvg/lib && mkdir -p dist",
    "cimsvg": "cd cimsvg && npm install && npm run build",
    "cimmenu": "cd cimmenu && npm install && npm run build",
    "libs": "npm run cimsvg && npm run cimmenu",
    "generateIndex": "node generateIndex.js $(npm config get mode) > index.html",
    "makeDist": "cp -a cimmenu/templates/generated/*.xml cimmenu/lib/*.js cimsvg/lib/*.js dist",
    "build-tasks": "npm run makeDirs && npm run libs && npm run generateIndex",
    "build": "npm run build-tasks && npm run makeDist && npm run test",
    "build-dev": "npm config set mode debug && npm run build",
    "initializeTests": "node node_modules/jasmine/bin/jasmine init",
    "test": "node test/runTests.js",
    "mockNpmInstall": "./npm/mockInstall.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "fast-glob": "^2.2.6",
    "file-loader": "^1.1.11",
    "formidable": "^1.2.1",
    "handlebars": "^4.0.11",
    "handlebars-loader": "^1.7.1",
    "jasmine": "^3.2.0",
    "jasmine-console-reporter": "^3.1.0",
    "jsdom": "^12.0.0",
    "libxmljs": "^0.18.7",
    "libxslt": "^0.7.0",
    "rollup": "^1.7.0",
    "style-loader": "^0.23.1",
    "to-string-loader": "^1.1.5",
    "url-loader": "^1.1.0",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2",
    "xmldom": "^0.1.27"
  },
  "dependencies": {
    "html": "^1.0.0",
    "html-format": "^1.0.1",
    "js-beautify": "^1.8.9"
  }
}
