{
  "name": "Pintura",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "generateIndex": "node generateIndex.js > index.html",
    "generateClassStructure": "node xslt_templates/generateClassStructure.js",
    "generateHandlebars": "node xslt_templates/generateHandlebarTemplates.js --xmlDir=./data_model",
    "handlebarTemplates": "handlebars hbrs_templates > hbrs_templates/template.js",
    "doWebpack": "webpack --config webpack.config.js",
    "doWebpackDev": "webpack --config webpack.config.dev.js",
    "templates": "npm run generateClassStructure && npm run generateHandlebars && npm run handlebarTemplates",
    "build": "npm run generateIndex && npm run templates && npm run doWebpack",
    "build-dev": "npm run generateIndex && npm run templates && npm run templates && npm run doWebpackDev"
  },
  "devDependencies": {
    "handlebars": "^4.0.11",
    "libxmljs": "^0.18.7",
    "libxslt": "^0.7.0",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  }
}
